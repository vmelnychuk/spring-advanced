<h1>Edit event</h1>
#parse("/WEB-INF/velocity/fragments/_go_back.vm")
<form method="post">
    #springBind("event")
    <table>
        <tr>
            <td>Event name</td>
            <td>#springFormInput("event.name" "")</td>
        </tr>
        <tr>
            <td>Event price</td>
            <td>#springFormInput("event.price" "")</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="hidden" value="${event.id}">
                <button type="submit" class="btn btn-default">Update</button>
            </td>
        </tr>
    </table>
</form>
