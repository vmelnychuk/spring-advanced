<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Update account</h1>
        <form method="post">
            #springBind("account")
            <div class="form-group">
                <label for="make">User email</label>
                <input type="text" value="${account.user.email}" readonly class="form-control"/>
            </div>
            <div class="form-group">
                <label for="make">Money</label>
                <input type="text" value="${account.money}" name="money" class="form-control"/>
            </div>
            <input type="hidden" name="id" value="${account.id}">
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>