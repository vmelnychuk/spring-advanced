<h1>Add event</h1>
<form method="post">
    #springBind("event")
    <table>
        <tr>
            <td>Event name</td>
            <td>#springFormInput("event.name" "")</td>
        </tr>
        <tr>
            <td>Event price</td>
            <td>#springFormInput("event.price" "")</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit" class="btn btn-primary">Add</button>
            </td>
        </tr>
    </table>
</form>