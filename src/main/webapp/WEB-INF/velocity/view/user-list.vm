<h1>User list</h1>
#parse("/WEB-INF/velocity/fragments/_go_back.vm")
<table class="table table-hover">
    <tr>
        <th>id</th>
        <th>email</th>
        <th>name</th>
        <th>password</th>
        <th>edit</th>
        <th>delete</th>
    </tr>
    #foreach ($user in ${users})
        <tr>
            <td>${user.id}</td>
            <td>${user.email}</td>
            <td>${user.name}</td>
            <td>${user.password}</td>
            <td><a href="#springUrl("/user/edit/${user.id}")" class="btn btn-warning">edit</a></td>
            <td><a href="#springUrl("/user/delete/${user.id}")" class="btn btn-danger">delete</a></td>
        </tr>
    #end
</table>
<a href="#springUrl("/user/add")" class="btn btn-success">Add</a>
