<h1>Edit auditorium</h1>
#parse("/WEB-INF/velocity/fragments/_go_back.vm")
<form method="post">
    #springBind("auditorium")
    <table>
        <tr>
            <td>Auditorium name</td>
            <td>#springFormInput("auditorium.name" "")</td>
        </tr>
        <tr>
            <td>Number of seats</td>
            <td>#springFormInput("auditorium.seats" "")</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="hidden" value="${auditorium.id}"/>
                <button type="submit" class="btn btn-primary">Add</button>
            </td>
        </tr>
    </table>
</form>
