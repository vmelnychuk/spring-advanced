<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
    <class name="training.spring.webservice.vo.UserCreateRequest">
        <map-to xml="UserCreateRequest"
                ns-uri="http://localhost:8080/cinema"/>
        <field name="name" type="string">
            <bind-xml name="name" node="element" />
        </field>
        <field name="password" type="string">
            <bind-xml name="password" node="element" />
        </field>
        <field name="email" type="string">
            <bind-xml name="email" node="element" />
        </field>

        <field name="money" type="integer">
            <bind-xml name="money" node="element" />
        </field>
    </class>
    
    <class name="training.spring.webservice.vo.UserCreateResponse">
        <map-to xml="UserCreateResponse" ns-uri="http://localhost:8080/cinema"/>
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>
    </class>

</mapping>